#definição da função 
def triangulo(a,b,c):
  if a+b >= c and b+c>+ a and c+a>=b:
      return True
  else:
      return False    
      
lado_a = float(input('Qual o lado a: '))
lado_b = float(input('Qual o lado b: '))
lado_c = float(input('Qual o lado c: '))

if trianglo(lado_a, lado_b, lado_c):
    print('Triangulo válido')
else: 
    print('Triangulo inválido') 
    
